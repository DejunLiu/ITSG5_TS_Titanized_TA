        type component ItsIpv6OverGeoNetworkingSystem extends ItsGeoNetworkingSystem {
            
            // NT2 ports
            port IPv6OverGeoNetworkingPort ipv6OverGeoNetworkingPort;            

        } // end component ItsAdapter
        
    } // End of group componentDefinitions

